<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Smart Apparel Styles
    Material Design 3.0 compliant styles with sports-specific components
    Package: com.google.android.material:material:1.9.0
-->
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="elevationOverlayEnabled">true</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineHeight">40sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.03125</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Body1</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Heat Map Component Style -->
    <style name="Widget.App.HeatMap" parent="Widget.MaterialComponents.CardView">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/surface_light</item>
        <item name="android:elevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">8dp</item>
        <item name="android:minHeight">200dp</item>
        <item name="gradientStartColor">@color/heatmap_low</item>
        <item name="gradientEndColor">@color/heatmap_high</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>

    <!-- Sensor Status Indicator Style -->
    <style name="Widget.App.SensorStatus" parent="Widget.MaterialComponents.Chip">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="chipIconTint">@color/sensor_status_tint</item>
        <item name="chipBackgroundColor">@color/surface_light</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Performance Metrics Card Style -->
    <style name="Widget.App.MetricsCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">@color/elevation_overlay_1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Accessibility Focus Highlight -->
    <style name="Widget.App.FocusHighlight">
        <item name="android:background">@drawable/focus_highlight</item>
        <item name="android:padding">4dp</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:accessibilityTraversalBefore">@id/next_element</item>
        <item name="android:accessibilityTraversalAfter">@id/previous_element</item>
    </style>

    <!-- Sports-Specific Theme Overlay -->
    <style name="ThemeOverlay.App.SportSpecific" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="elevationOverlayColor">@color/elevation_overlay_1</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>