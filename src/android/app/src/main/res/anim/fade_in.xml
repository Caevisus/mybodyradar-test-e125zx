<?xml version="1.0" encoding="utf-8"?>
<!--
    Performance-optimized fade-in animation for smooth UI transitions
    Duration: 300ms
    Interpolation: Accelerate-decelerate for natural motion
    Used by: Dashboard components, alerts, panels
    
    This animation respects system animation scale preferences and provides
    consistent, accessible view transitions across the application.
-->
<alpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromAlpha="0.0"
    android:toAlpha="1.0"
    android:duration="300"
    android:interpolator="@android:interpolator/accelerate_decelerate" />